  "featureset": {
    "features": [
      {
        "name": "sku_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match":{
            "sku":  "{{keywords}}"
          }
        }
      },
      {
        "name": "name_match",
        "params": [
