{
  "featureset": {
    "features": [
      {
        "name": "name_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "name": "{{keywords}}"
          }
        }
      },
      {
        "name": "name_phrase_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
              "name.hyphens": {
                  "query": "{{keywords}}",
                  "slop": 6
              }
           }
        }
      },
      {
        "name": "customer_review_average",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [{
                "field_value_factor": {
                    "field": "customerReviewAverage",
                    "missing": 3.0
                }
            }],
            "query": {
                "match_all": {}
            }
          }
        }
      }
    ]
  }
}